{
  "buildCommand": "pnpm exec next build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "ignoreCommand": "bash -c 'git diff HEAD^ HEAD --quiet . \":(exclude)apps/bff\" && exit 1 || exit 0'",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ]
}
